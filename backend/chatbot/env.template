# ==============================================
# QProcess Chatbot Backend - Environment Variables
# ==============================================
# Copy this file to .env and fill in your values
# Command: cp env.template .env
# ==============================================

# ------------------
# Django Configuration
# ------------------
DEBUG=True
SECRET_KEY=your-secret-key-here-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,*

# ------------------
# Database Configuration - DOCKER MODE
# ------------------
# When using Docker Compose (both backend and SQL Server in containers)
DB_ENGINE=mssql
DB_NAME=QTasks
DB_USER=sa
DB_PASSWORD=YourStrong@Passw0rd
DB_HOST=sqlserver
DB_PORT=1433

# SQL Server SA Password (must meet complexity requirements)
# Requirements: At least 8 characters, uppercase, lowercase, numbers, and symbols
SA_PASSWORD=YourStrong@Passw0rd

# ------------------
# Database Configuration - HOST MODE
# ------------------
# Uncomment these if connecting to SQL Server on your host machine (not in Docker)
# DB_HOST=host.docker.internal
# DB_USER=your_sql_username
# DB_PASSWORD=your_sql_password

# ------------------
# API Keys
# ------------------
CLAUDE_API_KEY=sk-ant-your-api-key-here

# ------------------
# CORS Configuration
# ------------------
# Comma-separated list of allowed origins
# Leave empty to allow all origins (not recommended for production)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# ------------------
# Production Settings
# ------------------
# For production deployment, use these settings:
# DEBUG=False
# SECRET_KEY=generate-a-strong-random-key-at-least-50-characters
# ALLOWED_HOSTS=your-domain.com,www.your-domain.com
# SA_PASSWORD=YourVeryStrong@ProductionPassw0rd!

